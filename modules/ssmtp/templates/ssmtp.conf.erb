### ssmtpd.conf
#
# sSMTP configuation file
#
# managed by Puppet, local changes will be overwritten
#

Root=<%= @root %>
Mailhub=<%= @mail_hub %>

FromLineOverride=<%= @from_line_override %>

<% if !@hostname.empty? -%>
Hostname=<%= @hostname %>
<% end -%>
<% if !@rewritedomain.empty? -%>
RewriteDomain=<%= @rewritedomain %>
<% end -%>

<% if !@authuser.empty? -%>
AuthUser=<%= @authuser %>
<% end -%>
<%- if !@authpass.empty? -%>
AuthPass=<%= @authpass %>
<% end -%>
<% if !@authmethod.empty? -%>
AuthMethod=<%= @authmethod %>
<% end -%>
<% if !@usetls.empty? -%>
UseTLS=<%= @usetls %>
<% end -%>
<% if !@usestarttls.empty? -%>
UseSTARTTLS=<%= @usestarttls %>
<% end -%>